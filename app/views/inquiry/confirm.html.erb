<div class="container">
  <div class="row mb-4 mx-auto">
    <div class="col-md-12">
       <p class="h4 mt-4 mb-5">お問い合わせ</p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>
        <table class="table">
          <tr>
            <th>名前</th>
            <td>
              <%= f.hidden_field :name %>
              <%= @inquiry.name %>
            </td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td>
              <%= f.hidden_field :email %>
              <%= @inquiry.email %>
            </td>
          </tr>
          <tr>
            <th>お問い合わせ内容</th>
            <td>
              <%= f.hidden_field :message %>
              <%= simple_format(@inquiry.message) %>
            </td>
          </tr>
        </table>
        <%= f.submit '送信', :class => 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>