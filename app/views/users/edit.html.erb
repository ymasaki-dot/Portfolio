<%= form_with model:@user, local:true do |f| %>
<div class="form-group">
  <%= f.label :profile_image, "プロフィールイメージ" %>
  <%= f.attachment_field :profile_image, placeholder:'プロフィールイメージ' %>
</div>
<div class="form-group">
  <%= f.label :name, "名前" %>
  <%= f.text_field :name, class: 'form-control', placeholder:'名前' %>
</div>
<div class="form-group">
  <%= f.label :introduction, "自己紹介" %>
  <%= f.text_area :introduction, class: 'form-control', placeholder:'自己紹介' %>
</div>
<%= f.submit '変更を保存', class:'btn btn-primary' %>
<% end %>
